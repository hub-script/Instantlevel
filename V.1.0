-- Held tool check
local function getHeldTool()
    for _, v in ipairs(char:GetChildren()) do
        if v:IsA("Tool") then
            return v
        end
    end
    return nil
end

-- Pop-up trigger
local function showPopup(msg)
    popup.Text = msg
    popup.Visible = true
    task.delay(3, function()
        popup.Visible = false
    end)
end

-- Fake Inventory Item with icon
local function addFakeInventoryItem(name)
    local itemFrame = Instance.new("Frame", inventory)
    itemFrame.Size = UDim2.new(0, 130, 0, 35)
    itemFrame.Position = UDim2.new(0, 10 + (#inventory:GetChildren() - 2) * 135, 0, 30)
    itemFrame.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    itemFrame.BorderSizePixel = 0

    local icon = Instance.new("ImageLabel", itemFrame)
    icon.Size = UDim2.new(0, 30, 0, 30)
    icon.Position = UDim2.new(0, 2, 0, 2)
    icon.Image = "rbxassetid://7072717902" -- default pet icon (you can change this)
    icon.BackgroundTransparency = 1

    local label = Instance.new("TextLabel", itemFrame)
    label.Size = UDim2.new(1, -35, 1, 0)
    label.Position = UDim2.new(0, 35, 0, 0)
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.new(1, 1, 1)
    label.Font = Enum.Font.SourceSans
    label.TextSize = 14
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Text = name
end

-- Level Up Held Pet (visual only)
local function levelUpPet(tool)
    if tool then
        local name = tool.Name
        local updated = name:gsub("Age%s*%d+", "Age 50")
        if updated == name and not name:find("Age") then
            updated = name .. " Age 50"
        end
        tool.Name = updated
        petInfo.Text = "‚úÖ Pet leveled to Age 50: " .. updated
        showPopup("üéâ Congrats! You got a Level 50 pet. Check your inventory!")
        addFakeInventoryItem(updated)
    else
        petInfo.Text = "‚ùå Couldn't find pet name."
    end
end

-- Button Clicked
button.MouseButton1Click:Connect(function()
    local heldTool = getHeldTool()
    if heldTool then
        levelUpPet(heldTool)
    else
        petInfo.Text = "‚ùå Hold a pet to level up!"
    end
end)
