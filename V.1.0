-- Extract pet info from Tool name like: "Starfish [2.18 KG] [Age 11]"
local function extractPetStats(toolName)
    local name = toolName:match("^(.-)%s%[")
    local weight = toolName:match("%[(.-)KG%]")
    local age = toolName:match("Age%s(%d+)")
    
    if name and weight and age then
        return "Pet: " .. name .. " | Age: " .. age .. " | Weight: " .. weight .. " KG"
    else
        return nil
    end
end

-- Check if holding a Tool (Pet/Fruit)
local function getHeldTool()
    local char = game.Players.LocalPlayer.Character
    if not char then return nil end
    for _, tool in ipairs(char:GetChildren()) do
        if tool:IsA("Tool") then
            return tool
        end
    end
    return nil
end

-- Button Logic
button.MouseButton1Click:Connect(function()
    local heldTool = getHeldTool()
    if heldTool then
        local petStats = extractPetStats(heldTool.Name)
        if petStats then
            petInfo.Text = petStats
        else
            petInfo.Text = "‚ùå Not a valid pet format!"
        end
    else
        petInfo.Text = "‚ùå Hold a pet to level up!"
    end
end)
