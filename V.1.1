-- Logic: Check if user is holding a fruit
local function isHoldingFruit()
    local character = game.Players.LocalPlayer.Character
    if not character then return false end
    for _, tool in pairs(character:GetChildren()) do
        if tool:IsA("Tool") and string.lower(tool.Name):find("fruit") then
            return true
        end
    end
    return false
end

-- Fake Pet Generator
local function generateFakePet()
    local names = {"Fluffy", "Shadow", "Whiskers", "Chomp", "Fang"}
    local name = names[math.random(1, #names)]
    local age = math.random(5, 15) .. " days"
    local weight = math.random(10, 80) .. " lbs"
    return "Pet: " .. name .. " | Age: " .. age .. " | Weight: " .. weight
end

